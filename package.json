{
  "name": "heart-felt",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:backend": "cd backend && wrangler dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "vite build",
    "build:backend": "cd backend && wrangler deploy",
    "migrate:local": "cd backend && wrangler d1 execute heartfelt-db --local --file=./migrations/0001_initial_schema.sql && wrangler d1 execute heartfelt-db --local --file=./migrations/0002_seed_data.sql",
    "migrate:prod": "cd backend && wrangler d1 execute heartfelt-db --remote --file=./migrations/0001_initial_schema.sql && wrangler d1 execute heartfelt-db --remote --file=./migrations/0002_seed_data.sql && wrangler d1 execute heartfelt-db --remote --file=./migrations/0003_add_preferences.sql",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@react-oauth/google": "^0.12.1",
    "framer-motion": "^11.11.17",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.27.0",

    "react-use-gesture": "^9.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.11.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "vite": "^5.4.10"
  }
}
